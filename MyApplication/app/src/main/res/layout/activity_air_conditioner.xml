<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="11"
    android:orientation="horizontal"
    android:rowCount="5"
    android:background="@drawable/bg"
    tools:context=".Air_conditioner">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/air_condition_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="11"
        android:layout_gravity="fill"
        android:background="#3700B3"
        app:title="登录中..."
        app:titleTextColor="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_rowWeight="5"
        android:layout_columnSpan="11"
        android:layout_gravity="fill"
        android:gravity="center"
        android:text="空调控制系统"
        android:textColor="@color/white"
        android:textSize="60sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />

    <Button
        android:id="@+id/open"
        android:layout_width="0dp"
        android:layout_columnWeight="10"
        android:layout_height="0dp"
        android:layout_rowWeight="10"
        android:background="@drawable/button_bg_selector1"
        android:onClick="on_click"
        android:text="开启空调"
        android:textColor="@color/white"
        android:textSize="40sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <Button
        android:id="@+id/close"
        android:layout_width="0dp"
        android:layout_columnWeight="10"
        android:layout_height="0dp"
        android:layout_rowWeight="10"
        android:background="@drawable/button_bg_selector2"
        android:onClick="off_click"
        android:text="关闭空调"
        android:textColor="@color/white"
        android:textSize="40sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <Button
        android:id="@+id/change_mode"
        android:layout_width="0dp"
        android:layout_columnWeight="10"
        android:layout_height="0dp"
        android:layout_rowWeight="10"
        android:background="@drawable/button_bg_selector0"
        android:onClick="change_mode"
        android:text="切换模式"
        android:textColor="@color/white"
        android:textSize="40sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <Button
        android:id="@+id/wind_speed"
        android:layout_width="0dp"
        android:layout_columnWeight="10"
        android:layout_height="0dp"
        android:layout_rowWeight="10"
        android:background="@drawable/button_bg_selector4"
        android:onClick="wind_speed"
        android:text="切换风速"
        android:textColor="@color/white"
        android:textSize="40sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <Button
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_columnWeight="10"
        android:layout_height="0dp"
        android:layout_rowWeight="10"
        android:layout_rowSpan="3"
        android:background="@drawable/button_bg_selector3"
        android:onClick="return_click"
        android:text="返回主菜单"
        android:textColor="@color/white"
        android:textSize="50sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        android:layout_columnSpan="9"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <Button
        android:id="@+id/heat_up"
        android:layout_width="0dp"
        android:layout_columnWeight="10"
        android:layout_height="0dp"
        android:layout_rowWeight="10"
        android:background="@drawable/button_bg_selector5"
        android:onClick="heat_up"
        android:text="增加温度"
        android:textColor="@color/black"
        android:textSize="40sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <Button
        android:id="@+id/cool_down"
        android:layout_width="0dp"
        android:layout_columnWeight="10"
        android:layout_height="0dp"
        android:layout_rowWeight="10"
        android:background="@drawable/button_bg_selector6"
        android:onClick="cool_down"
        android:text="减少温度"
        android:textColor="@color/black"
        android:textSize="40sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <Button
        android:id="@+id/LRswing"
        android:layout_width="0dp"
        android:layout_columnWeight="10"
        android:layout_height="0dp"
        android:layout_rowWeight="10"
        android:background="@drawable/button_bg_selector7"
        android:onClick="LRswing"
        android:text="左右扫风"
        android:textColor="@color/black"
        android:textSize="40sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <Button
        android:id="@+id/UDswing"
        android:layout_width="0dp"
        android:layout_columnWeight="10"
        android:layout_height="0dp"
        android:layout_rowWeight="10"
        android:background="@drawable/button_bg_selector8"
        android:onClick="UDswing"
        android:text="上下扫风"
        android:textColor="@color/black"
        android:textSize="40sp" />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        />
</GridLayout>